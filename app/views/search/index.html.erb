<% content_for :javascript do %>
  <script>
    window.edscprefs = <%=raw @preferences.to_json %>;
  </script>

  <%= javascript_include_tag "search" %>
<% end %>

<% content_for :toolbar_secondary do %>
  <%= render partial: 'workspace_name' %>
  <%= render partial: 'shared/feedback' %>
  <%= render partial: 'shared/login' %>
<% end %>

<% content_for :toolbar do %>
  <div class="landing-toolbar-container">
  <div class="landing-toolbar-content">
  <%= form_tag('/', method: 'get', class: 'auto-submit') do %>
    <p>
      <input id="keywords" type="text" name="keywords" class="autocomplete-placenames"
             data-bind="valueUpdate: 'keyup'"
             placeholder="Type any topic or dataset name"
             autofocus>
    </p>
  <% end %>
  <div class="dropdown" id="temporal-dropdown">
    <a href="#" class="button temporal-dropdown-button dropdown-button" title="Select temporal">
      <i class="fa fa-clock-o"></i>
      <span class="dropdown-value">Temporal</span>
      <i class="fa fa-caret-down"></i>
    </a>
    <ul class="dropdown-menu temporal-dropdown">
      <li>
        <!-- ko with: query.temporal.pending -->
        <%= render partial: 'temporal_template', locals: {prefix: 'dataset', show_actions: true} %>
        <!-- /ko -->
      </li>
    </ul>
  </div>


  <div class="dropdown" data-bind="with: ui.spatialType">
    <a href="#" data-toggle="dropdown" class="button dropdown-button spatial-dropdown-button" title="Select spatial"><i class="fa fa-fw" data-bind="css: icon"></i> <span class="dropdown-value" data-bind="text: name">Spatial</span> <i class="fa fa-caret-down"></i></a>
    <ul class="dropdown-menu spatial-selection">
      <li><a href="#" class="dropdown-link select-polygon" data-bind="click: selectPolygon" title="Select Polygon"><i class="edsc-icon-poly-open edsc-icon-fw"></i> Polygon</a></li>
      <li><a href="#" class="dropdown-link select-rectangle" data-bind="click: selectRectangle" title="Select Rectangle"><i class="edsc-icon-rect-open edsc-icon-fw"></i> Rectangle</a></li>
      <li><a href="#" class="dropdown-link select-point" data-bind="click: selectPoint" title="Select Point"><i class="fa fa-map-marker"></i> Point</a></li>
      <li><a href="#" class="dropdown-link select-shapefile" data-bind="click: selectShapefile" title="Select Shapefile"><i class="fa fa-file-o"></i> File <span class="geojson-formats">(KML, KMZ, ESRI, &hellip;)</span></a></li>
      <li><a href="#" class="dropdown-link select-grid" data-bind="click: selectGrid" title="Select Grid Coordinates"><i class="edsc-icon-globe-grid"></i> Grid Coordinates</a></li>
    </ul>
  </div>
  <a href="#" class="button clear-filters landing-hidden" data-bind="event: {click: clearFilters}" title="Clear filters"><i class="fa fa-eraser"></i> <span class="button-value">Clear Filters</span></a>
</div>
</div>
<% end %>

<div class="master-overlay homepage-search is-master-overlay-secondary-hidden" id="datasets-overlay">
  <%= render partial: 'overlay_parent' %>
  <div class="master-overlay-main">
    <div class="master-overlay-main-content" data-level="0">
      <section id="dataset-results" data-master-overlay-title="Datasets">
        <a class="master-overlay-close master-overlay-hide" href="#" title="close"><i class="fa fa-times-circle"></i></a>
        <nav class="master-overlay-nav master-overlay-when-parent-hidden">
          <a href="#" class="master-overlay-show-parent">
            <i class="fa fa-search"></i> Browse Datasets
            <span data-bind="if: query.facets() && query.facets().length > 0">
               (<span data-bind="text: pluralize(query.facets().length, 'facet', 'facets')"></span> applied)
            </span>
          </a>
        </nav>
        <header>
          <h2><strong data-bind="text: datasets.hits"></strong> Matching Datasets</h2>
        </header>
        <div class="master-overlay-content" data-bind="event: {scroll: ui.datasetsList.scrolled}">
          <!-- ko if: datasets.featured().length > 0 -->
          <h3 class="panel-title panel-list-group-title">Recent and Featured</h3>
          <div class="panel-list">
            <ul id="dataset-featured-list"
                class="panel-list-list knockout-template"
                data-bind="foreach: datasets.featured, css: { 'knockout-template': !bindingsLoaded }">
              <%= render partial: 'dataset_list_item', locals: {is_project: false} %>
            </ul>
          </div>

          <h3 class="panel-title panel-list-group-title">More Datasets</h3>
          <!-- /ko -->
          <div class="panel-list">
            <ul id="dataset-results-list"
                class="panel-list-list knockout-template"
                data-bind="foreach: datasets.unfeatured, css: { 'knockout-template': !bindingsLoaded }">
              <%= render partial: 'dataset_list_item', locals: {is_project: false} %>
            </ul>
            <p class="panel-list-load-more" data-bind="visible: datasets.isLoading">
              Loading datasets...
            </p>
          </div>
        </div>
      </section>
      <section id="project-overview" class="master-overlay-hide-self">
        <a class="master-overlay-close master-overlay-hide" href="#" title="close"><i class="fa fa-times-circle"></i></a>
        <nav class="master-overlay-nav">
          <a class="master-overlay-back master-overlay-hide-secondary" href="#" data-bind="click: ui.projectList.hideFilters">
            <i class="fa fa-arrow-circle-o-left"></i> Back to Dataset Search
          </a>
        </nav>
        <header class="with-options">
          <h2>Project Datasets</h2>
          <div class="master-overlay-global-actions actions">
            <a href="#" class="button retrieve" title="Retrieve project data" data-bind="click: $root.ui.projectList.loginAndDownloadProject, visible: !project.isEmpty()">
              <i class="fa fa-download"></i> Retrieve Project Data
            </a>

            <a href="#" title="View all datasets" data-bind="visible: !$root.ui.projectList.allDatasetsVisible() && !project.isEmpty(), click: $root.ui.projectList.toggleViewAllDatasets" class="button icon-button" >
              <i class="fa fa-eye"></i>
            </a>
            <a href="#" title="Hide all datasets" data-bind="visible: $root.ui.projectList.allDatasetsVisible() && !project.isEmpty(), click: $root.ui.projectList.toggleViewAllDatasets" class="button icon-button button-active" >
              <i class="fa fa-eye"></i>
            </a>
          </div>
        </header>
        <div class="master-overlay-content panel-list">
          <ul id="project-datasets-list"
              class="panel-list-list knockout-template"
              data-bind="foreach: project.datasets, css: { 'knockout-template': !bindingsLoaded }">
            <%= render partial: 'dataset_list_item', locals: {is_project: true} %>
          </ul>
          <div class="master-overlay-help" data-bind="if: project.datasets().length == 0">
            <p>
              Use this space to collect datasets of interest as you adjust your search parameters.
            </p>
            <p>
              To add a dataset to your project, click the <i class="fa fa-plus"></i> icon on the desired dataset.
              Once collected, you can use the tools available in this view to compare datasets on the map or on a timeline
              and choose granules you want from each.
            </p>
            <p>
              When you are satisfied with your selections, click the <i class="fa fa-download"></i> button to
              access your data.
            </p>
          </div>
        </div>
      </section>
      <%= render partial: 'granule_list' %>
      <%= render partial: 'granule_details' %>
      <%= render partial: 'dataset_details' %>
    </div>
  </div>
  <div class="master-overlay-secondary">
    <div class="master-overlay-secondary-content" data-level="0">
      <section id="granule-search" >
          <a data-bind="click: ui.projectList.hideFilters" class="master-overlay-close master-overlay-hide-secondary" href="#" title="close"><i class="fa fa-times-circle"></i></a>
        <nav class="master-overlay-nav">
          <i class="fa fa-edit"></i> Granule Filters
        </nav>
        <!-- ko if: project.searchGranulesDataset() -->
        <header>
          <h2 data-bind="text: project.searchGranulesDataset().dataset_id"></h2>
        </header>
        <%= render partial: 'granule_search' %>
        <!-- /ko -->
      </section>
    </div>
  </div>
  <div class="master-overlay-minimized">
    <a href="#datasets-overlay" class="button text-button master-overlay-show">
      <i class="fa fa-th-list"></i> Results List
    </a>
  </div>
  <div class="add-to-project-tooltip hide" >
    <h4>Add dataset to the current project</h4>
    <p>Click the icon to add this dataset to your project. Once collected, you can
      use the tools available in this view to compare datasets on the map or on a timeline and choose granules you want from each.</p>
    <p>When you are satisfied with your selections, click the <i class="fa fa-download"></i> button to access your data.</p>
  </div>
</div>

<div id="map" class="map" style="height:100%">
  <div id="map-center"></div>
  <!-- ko if: ui.datasetsList.focused() -->
  <!-- ko with: ui.datasetsList.focused() -->
  <!-- ko if: stickied() && (stickied().browse_flag === 'true' || stickied().browse_flag === true) -->
  <div class="granule-browse" data-bind="css: {busy: loadingBrowse()}">
    <a data-bind="attr: {href: stickied().edsc_full_browse_url()}" target="_blank" title="View full image">
      <img data-bind="attr: {src: stickied().edsc_browse_url(256)}, event: {load: finishLoad}" alt="Browse preview" title="View full image">
    </a>
  </div>
  <!-- /ko -->
  <!-- /ko -->
  <!-- /ko -->
  <%#
  <!-- ko stopBinding: true -->
  <div id="granule-info" class="granule-info map-tooltip" data-bind="if: granules() && isCurrent()">
    <div class="map-tooltip-content">
      <!-- ko if: !granules().isLoaded() -->
      <p class="busy">Loading granules...</p>
      <!-- /ko -->
      <!-- ko if: granules().isLoaded() -->
      <p>
        <span data-bind="text: granules().hits() == 1 ? '1 Granule' : granules().hits() + ' Granules'"></span>
        at this location
      </p>
      <!-- ko if: granules().hits() > 0 -->
      <p class="map-tooltip-action">Click map for details</p>
      <!-- /ko -->
      <!-- /ko -->
    </div>
  </div>
  <!-- /ko -->
   %>
  <%# Container lets leaflet move this around the DOM without messing up knockout bindings %>
  <%#
  <script id="granule-details-template" type="text/html">
    <div id="map-granule-details" class="granule-details" data-bind="if: granules()">
      <!-- ko if: !granules().isLoaded() -->
      <p class="busy">Loading granules...</p>
      <!-- /ko -->
      <!-- ko if: granules().isLoaded() && granules().results().length > 0 -->
      <p class="map-popup-info">
        <span data-bind="text: granules().hits() == 1 ? '1 Granule' : granules().hits() + ' Granules'"></span>
        at this location
      </p>
      <ul class="map-popup-pane map-popup-pane-x" data-bind="event: {scroll: scrolled}">
        <!-- ko foreach: granules().results() -->
        <li class="map-popup-pane-item">
          <p class="map-popup-pane-label">
            <span data-bind="text: time_start"></span>
            <span data-bind="text: time_end"></span>
          </p>
          <!-- ko if: browse_flag === "true" || browse_flag === true -->
          <img class="browse-thumbnail" data-bind="attr: {src: edsc_browse_url(), title: title}">
          <!-- /ko -->
          <!-- ko if: browse_flag !== "true" && browse_flag !== true -->
          <div class="browse-thumbnail browse-thumbnail-none">
            No browse imagery
          </div>
          <!-- /ko -->
        </li>
        <!-- /ko -->
        <!-- ko if: granules().hasNextPage() -->
        <li class="busy map-popup-pane-item map-popup-pane-more">
          Loading...
        </li>
        <!-- /ko -->
      </ul>
      <!-- /ko -->
      <!-- ko if: granules().isLoaded() && granules().results().length == 0 -->
      <p>No Granules</p>
      <!-- /ko -->
    </div>
  </script>
  %>

  <div class="geojson-help">
    <div class="geojson-help-dropzone">
      <h1>Search by Shape File</h1>
      <p>
        <a class="geojson-dropzone-link" href="#">Click here</a> to select a shape file.  You may also
        simply drag and drop shape files onto the map at any time.
      </p>
      <p>
        Valid formats include:
      </p>
      <ul>
        <li>ESRI Shapefile (.zip including .shp, .dbf, and .shx file)</li>
        <li>Keyhole Markup Language (.kml or .kmz)</li>
        <li>GeoJSON (.json or .geojson)</li>
        <li>GeoRSS (.rss, .georss, or .xml)</li>
      </ul>
      <button data-bind="click: ui.spatialType.selectNone"
              class="button text-button" type="button">Cancel</button>
    </div>
  </div>
</div>

<div class="map-grid-search" data-bind="with: query.grid, visible: ui.spatialType.name() == 'Grid Coordinates' || query.grid.selected(), css: { 'knockout-template': !bindingsLoaded }">
  <!-- ko if: error --><span class="error" data-bind="text: error()"></span><!-- /ko -->
  <label for="map-grid-system">
    <i class="edsc-icon-globe-grid"></i> Grid Coordinates
  </label>
  <select id="map-grid-system" name="map-grid-system" data-bind="value: selected, options: available, optionsText: 'label', optionsCaption: 'Coordinate System...'">
  </select>
  <input type="text" id="map-grid-coordinates" name="map-grid-coordinates" data-bind="value: coordinates" placeholder="Coordinates...">
  <a href="#" class="button text-button">Set</a>
  <label for="map-grid-coordinates" class="map-grid-hint" data-bind="text: hint"></label>
</div>

<div id="temporal-query" data-bind="with: query.temporal.applied">
  <p>
    <i class="fa fa-clock-o"></i>
    <span data-bind="visible: start.date">
      <strong>Start</strong>
      <span data-bind="text: start.humanDateString"></span>
    </span>
    <span data-bind="visible: stop.date">
      <strong>Stop</strong>
      <span data-bind="text: stop.humanDateString"></span>
    </span>
    <span data-bind="visible: (start.date() || stop.date()) && isRecurring()">
      <strong>Range</strong> <span data-bind="text: yearsString"></span>
    </span>
    <a href="#" data-bind="click: clear, visible: start.date() || stop.date()" title="Remove temporal constraint"><i class="fa fa-times-circle"></i></a>
  </p>
</div>

